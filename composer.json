{
    "name": "rlacerda83/service-email",
    "description": "Microservice for sending e-mail",
    "keywords": ["email", "microservice", "lumen", "laravel"],
    "homepage": "http://github.com/rlacerda83/lumen-email-service",
    "type": "project",
    "license": "BSD",
    "authors": [
        {
            "name": "Rodrigo Lacerda",
            "email": "r.lacerda83@gmail.com"
        }
    ],
    "require": {
        "laravel/lumen-framework": "5.1.*",
        "vlucas/phpdotenv": "~1.0",
        "illuminate/mail" : "5.*",
        "jeremeamia/superclosure": "~2.0",
        "dingo/api": "@dev",
        "rlacerda83/query-parser": "@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "fzaninotto/faker": "~1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
